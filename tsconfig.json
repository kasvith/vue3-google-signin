{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": [
      "./src/@types"
    ],
    "strict": true,
    "removeComments": false
  },
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}